pipeline {
    agent any
    
    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        NODE_VERSION = '18'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "‚úÖ Code checked out successfully"
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('infrastructure') {
                    sh 'npm install'
                }
                dir('client') {
                    sh 'npm install'
                }
                echo "‚úÖ Dependencies installed"
            }
        }
        
        stage('Lint & Test') {
            steps {
                dir('infrastructure') {
                    sh 'npm run build'
                    sh 'npx cdk synth'
                }
                echo "‚úÖ CDK synth successful"
            }
        }
        
        stage('Deploy Infrastructure') {
            when {
                branch 'main'
            }
            steps {
                dir('infrastructure') {
                    sh 'npx cdk deploy --require-approval never'
                }
                echo "‚úÖ Infrastructure deployed"
            }
        }
    }
    
    post {
        success {
            echo "üéâ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
